<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".beforeJaap.mainSelection.mainSelectionActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:background="@drawable/baseline_arrow_back_24" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="223dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-2dp"
            android:background="@drawable/krishnabaalroop"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/graadient_secondary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MantraNames"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#EB4511"
                >

                <TextView
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="मंत्र"
                    android:textAlignment="center"
                    android:textColor="#ffd200"
                    android:textSize="@dimen/_40sdp"


                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/GodImages"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
              app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#EB4511">

                <TextView
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="तस्वीर"
                    android:textAlignment="center"
                    android:textColor="#ffd200"
                    android:textSize="@dimen/_40sdp"


                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/PujaSamagri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardBackgroundColor="#EB4511"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="395dp"
                    android:layout_height="66dp"
                    android:gravity="center"
                    android:text="सामग्री"
                    android:textAlignment="center"
                    android:textColor="#ffd200"
                    android:textSize="@dimen/_40sdp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/Done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="#EB4511"
                >

                <TextView
                    android:layout_width="123dp"
                    android:layout_height="62dp"
                    android:text="shuru"
                    android:textAlignment="center"
                    android:textColor="#ffd200"
                    android:textSize="@dimen/_30sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>



        </RelativeLayout>

    </LinearLayout>


</LinearLayout>