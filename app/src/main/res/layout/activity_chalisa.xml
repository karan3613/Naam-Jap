<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chalisa.chalisa"
    android:orientation="vertical"
    android:background="@drawable/gradient_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@drawable/baseline_arrow_back_24"
            android:id="@+id/back"/>

        <Button
            android:id="@+id/magnify"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="49dp"
            android:background="@drawable/baseline_zoom_in_24" />

        <Button
            android:id="@+id/demagnify"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_toStartOf="@+id/magnify"
            android:background="@drawable/baseline_zoom_out_24" />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/chalisaText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:scrollbars="vertical"
            android:textStyle="bold"
            android:textColor="#ffd200 "
            android:textSize="14sp"

            />

</LinearLayout>

</LinearLayout>